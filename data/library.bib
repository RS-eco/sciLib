doi = {10.1111/ddi.12412},
file = {:home/mabi/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Tayleur et al. - 2016 - Regional variation in climate change winners and losers highlights the rapid loss of cold-dwelling species.pdf:pdf},
isbn = {13669516},
issn = {14724642},
journal = {Diversity and Distributions},
keywords = {Avian ecology,Climate change,Community temperature index,Macroecology},
