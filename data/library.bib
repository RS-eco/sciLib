journal = {Global Environmental Change},
keywords = {Convergence,Economic growth,GDP scenario},
pages = {215--225},
publisher = {Elsevier Ltd},
title = {{Future growth patterns of world regions – A GDP scenario approach}},
url = {http://dx.doi.org/10.1016/j.gloenvcha.2015.02.005},
