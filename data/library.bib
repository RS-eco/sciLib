doi = {10.1111/ddi.12229},
file = {:home/mabi/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Barbet-Massin, Jetz - 2014 - A 40-year, continent-wide, multispecies assessment of relevant climate predictors for species distribution.pdf:pdf},
isbn = {1472-4642},
issn = {14724642},
journal = {Diversity and Distributions},
keywords = {Bioclim variables,Model transferability,Spatial evaluation,Species distribution models,Temporal evaluation,Variable importance},
number = {11},
pages = {1285--1295},
title = {{A 40-year, continent-wide, multispecies assessment of relevant climate predictors for species distribution modelling}},
volume = {20},
year = {2014}
}
