file = {:home/mabi/Documents/Wissenschaft/Journals/Conservation Biology/Sekercioglu et al. - 2008 - Climate change, elevational range shifts, and bird extinctions.pdf:pdf},
isbn = {0888-8892},
issn = {08888892},
journal = {Conservation Biology},
keywords = {Avian biogeography,Biodiversity,Extinction likelihood,GIS,Global warming,Lapse rates,Macroecology,Mountain endemics,Ornithology,Tropical forests},
