doi = {10.1111/1365-2656.12386},
isbn = {1365-2656},
issn = {1365-2656},
journal = {Journal of Animal Ecology},
keywords = {bottlenecks,connectivity,gene flow,graph theory,green infrastructures,obstacles,permeability,space use,tactical and strategic movements},
number = {1},
pages = {32--42},
pmid = {25950737},
title = {{Predicting the continuum between corridors and barriers to animal movements using Step Selection Functions and Randomized Shortest Paths}},
