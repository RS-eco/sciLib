@article{Bond2014,
abstract = {Changes in the world's oceans have altered nutrient flow, and affected the viability of predator populations when prey species become unavailable. These changes are integrated into the tissues of apex predators over space and time and can be quantified using stable isotopes in the inert feathers of historical and contemporary avian specimens. We measured $\delta$(13) C and $\delta$(15) N values in Flesh-footed Shearwaters (Puffinus carneipes) from Western and South Australia from 1936-2011. The Flesh-footed Shearwaters more than doubled their trophic niche (from 3.91 ± 1.37 ‰(2) to 10.00 ± 1.79 ‰(2) ), and dropped an entire trophic level in 75 years (predicted $\delta$(15) N decreased from +16.9 ‰ to + 13.5 ‰, and $\delta$(13) C from -16.9 ‰ to -17.9 ‰) - the largest change in $\delta$(15) N yet reported in any marine bird, suggesting a relatively rapid shift in the composition of the Indian Ocean food web, or changes in baseline $\delta$(13) C and $\delta$(15) N values. A stronger El Ni{\~{n}}o-Southern Oscillation results in a weaker Leeuwin Current in Western Australia, and decreased Flesh-footed Shearwater $\delta$(13) C and $\delta$(15) N. Current climate forecasts predict this trend to continue, leading to increased oceanic 'tropicalization' and potentially competition between Flesh-footed Shearwaters and more tropical sympatric species with expanding ranges. Flesh-footed Shearwater populations are declining, and current conservation measures aimed primarily at bycatch mitigation are not restoring populations. Widespread shifts in foraging, as shown here, may explain some of the reported decline. An improved understanding and ability to mitigate the impacts of global climactic changes is therefore critical to the long-term sustainability of this declining species.},
author = {Bond, Alexander L. and Lavers, Jennifer L.},
doi = {10.1111/gcb.12554},
file = {:home/mabi/Documents/Wissenschaft/Journals/Global Change Biology/Bond, Lavers - 2014 - Climate change alters the trophic niche of a declining apex marine predator.pdf:pdf},
isbn = {1365-2486},
issn = {13652486},
journal = {Global Change Biology},
keywords = {El Ni??o-Southern Oscillation,Flesh-footed shearwater,Niche width,Puffinus carneipes,Stable isotopes,leeuwin current},
number = {7},
pages = {2100--2107},
pmid = {24615959},
title = {{Climate change alters the trophic niche of a declining apex marine predator}},
volume = {20},
year = {2014}
}
