file = {:home/mabi/Documents/Wissenschaft/Journals/Global Ecology and Biogeography/Niamir et al. - 2016 - Use of taxonomy to delineate spatial extent of atlas data for species distribution models.pdf:pdf},
issn = {14668238},
journal = {Global Ecology and Biogeography},
