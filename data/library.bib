journal = {Biological Conservation},
keywords = {Data availability,Land cover,Landsat,Remote sensing},
pages = {34--42},
title = {{Land cover mapping and data availability in critical terrestrial ecoregions: A global perspective with Landsat thematic mapper and enhanced thematic mapper plus data}},
