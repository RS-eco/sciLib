doi = {10.1111/geb.12102},
file = {:home/mabi/Documents/Wissenschaft/Journals/Global Ecology and Biogeography/Calabrese et al. - 2014 - Stacking species distribution models and adjusting bias by linking them to macroecological models.pdf:pdf},
isbn = {1466-8238},
issn = {14668238},
journal = {Global Ecology and Biogeography},
keywords = {Boosted regression trees,Kumaraswamy distribution,Macroecological models,Maximum likelihood,Poisson binomial distribution,Richness regression models,Species richness,Stacked species distribution models},
number = {1},
