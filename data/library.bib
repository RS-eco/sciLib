doi = {10.1111/j.1600-0587.2010.06181.x},
file = {:home/mabi/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Barbet-Massin, Thuiller, Jiguet - 2010 - How much do we overestimate future local extinction rates when restricting the range of occurre.pdf:pdf},
isbn = {0906-7590},
issn = {09067590},
journal = {Ecography},
number = {5},
pages = {878--886},
title = {{How much do we overestimate future local extinction rates when restricting the range of occurrence data in climate suitability models?}},
volume = {33},
year = {2010}
}
