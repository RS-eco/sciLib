journal = {Ecological Applications},
keywords = {Citizen science,Ensemble model,Exploratory analysis,Multiscale,Sample bias,Semiparametric,Spatiotemporal,Survey data},
number = {8},
pages = {2131--2147},
pmid = {21265447},
title = {{Spatiotemporal exploratory models for broad-scale survey data}},
