issn = {0962-8452},
journal = {Proceedings of the Royal Society B: Biological Sciences},
keywords = {amphibians,biogeography,climate change,diversity gradient,historical contingency,temperature hypothesis,water,water–temperature hypothesis},
number = {1614},
pages = {1167--1173},
pmid = {17327208},
title = {{Environmental and historical constraints on global patterns of amphibian richness.}},
