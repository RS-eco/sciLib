isbn = {1476-4687 (Electronic)$\backslash$r0028-0836 (Linking)},
issn = {0028-0836},
journal = {Nature},
number = {7424},
pages = {444--448},
pmid = {23123857},
title = {{The global diversity of birds in space and time}},
