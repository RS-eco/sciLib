keywords = {Africa,Dung counts,Indirect effects,Livestock,Trait-mediated effects},
number = {2},
pages = {351--359},
pmid = {4912},
title = {{Competition and compensation among cattle, zebras, and elephants in a semi-arid savanna in Laikipia, Kenya}},
volume = {122},
year = {2005}
}
