doi = {10.1111/j.1466-8238.2011.00660.x},
file = {:home/mabi/Documents/Wissenschaft/Journals/Global Ecology and Biogeography/Whitton et al. - 2012 - Understanding global patterns in amphibian geographic range size Does Rapoport rule.pdf:pdf},
isbn = {1466-8238},
issn = {1466822X},
journal = {Global Ecology and Biogeography},
keywords = {Amphibians,Climate variability,Energy-water balance,Environmental gradients,Geographic range size,Global,Information theory,Model selection,Rapoport's rule,Simultaneous autoregressive model},
number = {2},
pages = {179--190},
title = {{Understanding global patterns in amphibian geographic range size: Does Rapoport rule?}},
