booktitle = {Global Biogeochemical Cycles},
doi = {10.1029/97GB00077},
isbn = {0886-6236},
issn = {0886-6236},
keywords = {N*,Nstar},
number = {2},
pages = {235--266},
pmid = {4204397},
title = {{Global patterns of marine nitrogen fixation and denitrification}},
