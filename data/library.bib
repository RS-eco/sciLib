issn = {13652656},
journal = {Journal of Animal Ecology},
keywords = {Beta diversity,Causal model,Collapse of cod,Human impact,Marine fish,Path analysis,Relative abundance,Species composition,Top predator,Trophic cascade},
number = {5},
