doi = {10.1111/geb.12433},
file = {:home/mabi/.local/share/data/Mendeley Ltd./Mendeley Desktop/Downloaded/Boucher-Lalonde, Morin, Currie - 2016 - Can the richness-climate relationship be explained by systematic variations in how individual sp.pdf:pdf},
isbn = {1466822X},
