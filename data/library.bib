issn = {13669516},
journal = {Diversity and Distributions},
keywords = {Communication,Conservation,Modelling,Structured decision-making,Trust,Uncertainty},
number = {5-6},
pages = {490--502},
title = {{Practical solutions for making models indispensable in conservation decision-making}},
volume = {19},
year = {2013}
}
