isbn = {1354-1013},
issn = {13652486},
journal = {Global Change Biology},
keywords = {Benthic,Deep-sea,Macroecology,Macrofauna,Megafauna,Meiofaunal,Size structure,Standing stock},
number = {6},
pages = {1861--1872},
pmid = {24382828},
title = {{Global reductions in seafloor biomass in response to climate change}},
