file = {:home/mabi/Documents/Wissenschaft/Journals/International Journal of Geographical Information Science/Ranacher et al. - 2015 - Why GPS makes distances bigger than they are.pdf:pdf},
issn = {1365-8816},
journal = {International Journal of Geographical Information Science},
keywords = {GPS measurement error,autocorrelation,car movement,movement analysis,pedestrian movement,quadratic forms,trajectories},
number = {2},
pages = {316--333},
pmid = {27019610},
publisher = {Taylor {\&} Francis},
title = {{Why GPS makes distances bigger than they are}},
