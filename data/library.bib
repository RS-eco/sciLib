isbn = {1466-822X},
issn = {1466822X},
journal = {Global Ecology and Biogeography},
keywords = {Allogenic parasites,Autogenic parasites,Beta diversity,Europe,Freshwater,Latitudinal gradients,Macroecology,Parasitism,Trematodes},
